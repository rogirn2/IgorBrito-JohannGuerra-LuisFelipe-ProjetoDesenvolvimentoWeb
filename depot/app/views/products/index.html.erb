<h1>Lista de produtos</h1>
<table>
  <thead>
    <tr>
      <th class="titulo">Titulo</th>
      <th class="descricao">Descrição</th>
      <th class="preco">Preço</th>
	  <th class="editar">Editar</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="titulo">
			<img src="<%= product.image_url %>">
			<br/>
			<%= product.title %>
		</td>
        <td class="descricao"><%= product.description %></td>
        <td class="preco"><%= product.price %></td>
        <td class="editar">
			<p><%= link_to 'Show', product %></p>
			<p><%= link_to 'Edit', edit_product_path(product) %></p>
			<p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div id="new_product"><%= link_to 'New Product', new_product_path %></div>