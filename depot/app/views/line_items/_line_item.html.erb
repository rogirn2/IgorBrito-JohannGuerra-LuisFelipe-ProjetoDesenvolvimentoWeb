<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
	<tr>
<% end %>
		<td><%= line_item.quantity %>&times;</td>
		<td><%= line_item.product.title %></td>
		<td><%= number_to_currency(line_item.product.price) %></td>
		<td class="line_item_price"><%= number_to_currency(line_item.total_price) %></td>
		<td><%= button_to '-', reduce_line_item_path(line_item), method: 'patch', class: "diminuir" %></td>
		<td><%= button_to '+', line_items_path(product_id: line_item.product), remote: true %></td>
	</tr>